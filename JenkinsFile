pipeline {
  agent any

  stages {
    stage('Running') {
      agent {
        docker {
          image 'node:14-alpine'
        }
      }


      steps {
        echo 'preparing the flow'
      }
    }

    stage('Build') {
      agent {
        docker {
          image 'node:14-alpine'
        }
      }

      steps {
        sh """
          npm install
        """
      }
    }
  }
}
